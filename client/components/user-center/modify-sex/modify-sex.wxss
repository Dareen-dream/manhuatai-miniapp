.modify-content {
  position: absolute;
  bottom: 0;
  z-index: 1000;
  width: 100%;
  transform: translate3d(0, 100%, 0);
  background-color: #fff;
}

.modify-item {
  position: relative;
  height: 94rpx;
  line-height: 94rpx;
  font-size: 32rpx;
  text-align: center;
  color: #333;
}

.item-border-bottom {
  border-bottom: 1px solid #dcdcdc;
}

.icon-gender,
.icon-selected {
  position: absolute;
  top: 50%;
  right: 32rpx;
  width: 32rpx;
  height: 32rpx;
  transform: translate3d(0, -50%, 0);
}

.icon-gender {
  left: 32rpx;
}

.divider {
  height: 20rpx;
  background-color: #f6f6f6;
}
