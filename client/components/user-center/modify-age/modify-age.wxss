.modify-content {
  position: absolute;
  bottom: 0;
  z-index: 1000;
  width: 100%;
  transform: translate3d(0, 100%, 0);
  background-color: #fff;
}

.modify-action {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 50px;
  font-size: 32rpx;
  padding: 0 32rpx;
}

.modify-cancel {
  padding: 20rpx 20rpx 20rpx 0;
  color: #b3b3b3;
}

.modify-confirm {
  padding: 20rpx 0 20rpx 20rpx;
  color: #029def;
}

.picker-view {
  width: 100%;
  height: 388rpx;
}

.picker-view-item {
  line-height: 38px;
  font-size: 50rpx;
  text-align: center;
}
