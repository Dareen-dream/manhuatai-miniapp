<view class="scroll-view-y" style="height: {{ swiperHeight }}px;">
  <!-- 漫画台男安卓banner -->
  <recommend-banner recommend-banner="{{ recommendData.book[0] }}"></recommend-banner>

  <!-- 漫画台跳转 -->
  <view>
    <image
      mode="widthFix"
      src="{{ imgHost }}{{ recommendData.book[1].comic_info[0].img_url }}"
    ></image>
  </view>

  <!-- 登台新作 -->
  <recommend-new recommend-new="{{ recommendData.book[2] }}"></recommend-new>

  <recommend-book-hasmore
    wx:for="{{ recommendHasMoreList }}"
    wx:key="{{ item.book_id }}"
    recommend-book="{{ item }}"
  ></recommend-book-hasmore>

  <recommend-book-nomore
    wx:for="{{ recommendNoMoreList }}"
    wx:key="{{ item.book_id }}"
    recommend-book="{{ item }}"
  ></recommend-book-nomore>

  <no-more></no-more>
</view>
