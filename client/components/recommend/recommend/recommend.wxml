<loading wx:if="{{ loading }}"></loading>
<scroll-view wx:else scroll-y  style="height: {{ swiperHeight }}px;">
  <!-- 漫画台男安卓banner -->
  <banner-swiper banner-data="{{ recommendData.book[0] }}"></banner-swiper>

  <!-- 漫画台跳转 -->
  <view>
    <navigator
      url="/pages/comic-detail/comic-detail?comicId={{ jumpData.comic_info[0].comic_id }}"
      hover-class="none"
    >
      <lazy-load
        height="{{ 140 }}"
        mode="aspectFill"
        src="{{ imgHost }}{{ jumpData.comic_info[0].img_url }}"
      ></lazy-load>
    </navigator>
  </view>

  <!-- 登台新作 -->
  <recommend-new
    wx:if="{{ recommendNew.title }}"
    recommend-new="{{ recommendNew }}"
  ></recommend-new>

  <!-- 台长推荐 -->
  <recommend-book-hasmore
    wx:if="{{ recommendAuthor.title }}"
    recommend-book="{{ recommendAuthor }}"
  ></recommend-book-hasmore>

  <!-- 频道佳作 -->
  <recommend-book-hasmore
    wx:if="{{ recommendGood.title }}"
    recommend-book="{{ recommendGood }}"
  ></recommend-book-hasmore>

  <book-nomore
    wx:if="{{ item.title }}"
    wx:for="{{ recommendNoMoreList }}"
    wx:key="{{ item.book_id }}"
    book-data="{{ item }}"
  ></book-nomore>

  <no-more></no-more>
</scroll-view>
