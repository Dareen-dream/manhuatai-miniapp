.recommend-book {
  margin-top: 10rpx;
}

.recommend-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.recommend-item {
  flex: 0 0 33%;
  position: relative;
  margin-bottom: 20rpx;
}

.item-text {
  box-sizing: border-box;
  position: absolute;
  bottom: 0;
  width: 100%;
  padding: 0 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.8);
}

.item-text text {
  width: 100%;
  line-height: 64rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.text-name {
  font-size: 28rpx;
}
