.loading-wrapper {
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60%;
  padding: 10rpx 20rpx;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 90rpx;
  z-index: 999;
}

.loading-img {
  flex: 0 0 50rpx;
  animation: loadingRotate 1s ease-in-out infinite;
}
.loading-text {
  margin-left: 20rpx;
  color: #fff;
  font-size: 28rpx;
}

@keyframes loadingRotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}
