.modal-mask-wrapper,
.modal-mask {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.modal-mask-wrapper {
  z-index: 9999;
  background-color: rgba(0, 0, 0, 0.5);
}

.validate-modal {
  position: absolute;
  width: 564rpx;
  padding-top: 60rpx;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
  border-radius: 15rpx;
  background-color: #fff;
}

.validate-icon {
  width: 284rpx;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translate3d(-50%, -80%, 0);
}

.img-code-wrapper {
  position: relative;
  width: 480rpx;
  height: 210rpx;
  margin: 0 auto;
}

.refresh-icon {
  box-sizing: border-box;
  width: 62rpx;
  height: 62rpx;
  padding: 12rpx;
  position: absolute;
  bottom: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.tap-sign {
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  border-radius: 50%;
  font-size: 24rpx;
  text-align: center;
  color: #fff;
  background-color: #8bd538;
  transform: translate3d(-50%, -50%, 0);
}

.validate-text-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 42rpx;
  border-bottom: 1px solid #c3c3c3;
}

.validate-text {
  font-size: 28rpx;
  line-height: 34rpx;
  color: rgba(0, 0, 0, 0.7);
}

.validate-content {
  flex: 0 0 162rpx;
  height: 92rpx;
  margin-left: 25rpx;
  line-height: 92rpx;
  font-size: 48rpx;
  font-weight: bold;
  text-align: center;
  border-radius: 10rpx;
  color: #c40200;
  background: linear-gradient(#fd715f, #ffcc70);
}

.confirm {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  text-align: center;
  color: rgba(0, 0, 0, 0.7);
}
