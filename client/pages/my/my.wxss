.user-bg {
  position: relative;
}

.star-bg {
  width: 100%;
  height: 270rpx;
  background-color: #029def;
}

.avatar-wrapper {
  box-sizing: border-box;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translate3d(-50%, 50%, 0);
  width: 184rpx;
  height: 184rpx;
  padding: 17rpx;
  border-radius: 50%;
  background-color: #fff;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.user-influence {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 34rpx 84rpx;
  font-size: 24rpx;
  color: rgba(0, 0, 0, .9);
}

.user-intrs {
  margin: 44rpx 0;
}

.user-name {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  color: rgba(0, 0, 0, .9);
}

.user-level {
  margin-left: 10rpx;
  padding: 8rpx 12rpx;
  font-size: 16rpx;
  border: 1px solid #333;
  border-radius: 16rpx;
}

.user-sign {
  font-size: 22rpx;
  text-align: center;
  color: #b3b3b3;
}

.user-gifts {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 48rpx 40rpx;
  font-size: 20rpx;
  color: #b3b3b3;
}

.gift {
  display: flex;
  align-items: center;
}

.gift-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 15rpx;
}

.divider {
  width: 100%;
  height: 20rpx;
  background-color: #f6f6f6;
}
