.user-bg {
  position: relative;
}

.star-bg {
  width: 100%;
  height: 270rpx;
  background-color: #029def;
}

.avatar-wrapper {
  box-sizing: border-box;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translate3d(-50%, 50%, 0);
  width: 184rpx;
  height: 184rpx;
  padding: 17rpx;
  border-radius: 50%;
  background-color: #fff;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.icon-gender {
  position: absolute;
  right: 0;
  bottom: 17rpx;
  width: 40rpx;
  height: 40rpx;
  transform: translate3d(50%, 0, 0);
}

.icon-vip {
  position: absolute;
  width: 184rpx;
  bottom: 0;
  left: 50%;
  transform: translate3d(-50%, 0, 0);
}

.user-influence {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 34rpx 84rpx;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.9);
}

.user-intrs {
  margin: 44rpx 0;
}

.user-name {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  text-align: center;
  color: rgba(0, 0, 0, 0.9);
}

.user-name-vip {
  color: #ffc502;
}

.user-level {
  margin-left: 10rpx;
  padding: 8rpx 12rpx;
  font-size: 16rpx;
  border: 1px solid #333;
  border-radius: 16rpx;
}

.user-name-vip .user-level {
  border-color: #ffc502;
}

.user-sign {
  font-size: 22rpx;
  text-align: center;
  color: #b3b3b3;
}

.user-gifts {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 48rpx 40rpx;
  font-size: 24rpx;
  color: #b3b3b3;
}

.gift {
  display: flex;
  align-items: center;
}

.gift-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 15rpx;
}

.divider {
  width: 100%;
  height: 20rpx;
  background-color: #f6f6f6;
}

.setting-item {
  display: flex;
  align-items: center;
  height: 92rpx;
  padding: 0 30rpx;
  border-bottom: 1px solid #f6f6f6;
  background-color: #fff;
}

/* 清除button的默认样式 */
button {
  background-color: #fff;
  text-align: inherit;
}

button::after {
  border: none;
}

.icon-mine {
  width: 42rpx;
  height: 42rpx;
  margin-right: 20rpx;
}

.setting-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.icon-guide {
  width: 20rpx;
  height: 20rpx;
}
