
.comic-detail-header {
  position: relative;
  width: 100%;
  height: 488rpx;
  background-color: rgba(0, 0, 0, 0.5);
  background-size: cover;
  background-position: 50%;
  overflow: hidden;
}

.comic-detail-header .header-info {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  padding: 0 20rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
}

.header-info .cover-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 168rpx;
  line-height: 1;
  overflow: hidden;
}

.cover-wrapper .cover-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 210rpx;
  margin-top: 20rpx;
}

.cover-info .info-top {
  display: flex;
}

.cover-info .comic-name {
  max-width: 300rpx;
  margin-right: 16rpx;
  line-height: 48rpx;
  font-size: 40rpx;
}

.cover-info .comic-author {
  font-size: 24rpx;
  line-height: 48rpx;
  color: rgba(255, 255, 255, 0.6);
}

.cover-info .comic-score {
  display: flex;
  align-items: flex-end;
}

.cover-info .comic-score text {
  margin-left: 6rpx;
  font-size: 24rpx;
  color: #f9ea19;
}

.cover-info .comic-type {
  display: flex;
  align-items: center;
  margin-top: 28rpx;
}

.comic-type .comic-hot {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.comic-type .type-list {
  display: flex;
  align-items: center;
  font-size: 20rpx;
  color: #fff;
}

.type-list .type-item {
  margin-left: 10rpx;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  background-color: rgba(188, 188, 188, 0.5);
}

.header-info .cover-img {
  position: relative;
  flex: 0 0 158rpx;
  height: 210rpx;
  padding: 4rpx;
  background-color: #fff;
}

.cover-img .copyright-type {
  position: absolute;
  width: 24rpx;
  height: 54rpx;
  top: 0;
  right: 2rpx;
  overflow: hidden;
}

.cover-img .copyright-type .type-text {
  position: absolute;
  top: 50%;
  left: 48%;
  transform: translate3d(-50%, -50%, 0);
  line-height: 1.2;
  font-size: 16rpx;
}

.comic-detail-header .pic-mask {
  position: absolute;
  bottom: -64rpx;
  height: 128rpx;
}

.no-more {
  background-color: #f8f8f8;
}
