.rank-types {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 20rpx 30rpx 0;
}

.item-type {
  margin-bottom: 20rpx;
  padding: 14rpx 18rpx;
  font-size: 28rpx;
}

.item-type:nth-child(1),
.item-type:nth-child(6) {
  margin-right: 25rpx;
}

.item-type:nth-child(5),
.item-type:nth-child(10) {
  margin-left: 25rpx;
}


.item-type.active {
  border-radius: 56rpx;
  background-color: #039fec;
  color: #fff;
}

.rank-update {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 74rpx;
  padding: 0 20rpx;
  font-size: 20rpx;
  color: #b3b3b3;
  background-color: #f6f6f6;
}

.update-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
}

.update-week,
.update-platform {
  padding: 10rpx 15rpx;
  border: 1px solid #b3b3b3;
  border-radius: 40rpx;
}

.rank-list {
  /* padding: 0 30rpx 0 20rpx; */
}

.rank-item {
  display: flex;
  margin: 32rpx 0;
  padding: 0 30rpx 0 20rpx;

}

.item-img {
  width: 178rpx;
  margin-right: 20rpx;
}

.item-info {
  flex: 1;
  position: relative;
}

.item-comic-name {
  padding: 20rpx 0;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.9);
}

.item-author-name {
  font-size: 24rpx;
  color: #b3b3b3;
}

.item-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 34rpx;
  font-size: 24rpx;
  color: #b3b3b3;
}

.item-count {
  font-size: 20rpx;
}

.rank-index {
  position: absolute;
  top: 10rpx;
  right: 0;
  width: 52rpx;
}

.index-num {
  position: absolute;
  top: 45%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
  font-size: 20rpx;
  color: #fff;
}

.rank-bg {
  height: 52rpx;
}

.item-rise-rank {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 1px;
  height: 24rpx;
  line-height: 24rpx;
  font-size: 18rpx;
  text-align: center;
  color: #b3b3b3;
  background-color: #f5f5f5;
}

.rise-img {
  width: 16rpx;
  height: 18rpx;
  margin-right: 1px;
}

.rise-img.rise-img-none {
  width: 32rpx;
  height: 0;
  margin-right: 0;
  border: 1px solid #b3b3b3;
}

.no-more {
  border-top: 1px solid #eee;
}
