/* @import "/wxParse/wxParse.wxss"; */

.post-user {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 28rpx 0;
}

.user-info {
  display: flex;
}

.user-avatar-wrapper {
  position: relative;
  width: 86rpx;
  height: 86rpx;
  margin-right: 36rpx;
  border: 1px solid #eee;
  border-radius: 50%;
}

.user-avatar {
  width: 86rpx;
  height: 86rpx;
  border-radius: 50%;
}

.icon-vip {
  position: absolute;
  top: 0;
  left: -8rpx;
  width: 54rpx;
  height: 24rpx;
}

.user-name-wrapper {
  display: flex;
  align-items: center;
  color: #019eed;
}

.user-name {
  max-width: 270rpx;
  margin-right: 10rpx;
  font-size: 32rpx;
  line-height: 36rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.user-level {
  line-height: 36rpx;
  font-size: 20rpx;
  padding: 0 12rpx;
  border: 1px solid #019eed;
  border-radius: 20rpx;
}

.post-create-time {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #b3b3b3;
}

.post-title {
  margin: 24rpx 0;
  font-size: 32rpx;
  line-height: 40rpx;
  color: rgba(0, 0, 0, .9);
}

.post-content {
  padding: 0 32rpx;
}

/* 自定义wxParse样式 */
.wxParse-h1 {
  font-size: 18px;
  font-weight: 400;
  margin-bottom: .9em;
}

.wxParse-h2 {
  font-size: 16px;
  font-weight: 400;
  margin-bottom: .34em;
}

.wxParse-h3 {
  font-weight: 400;
  font-size: 15px;
  margin-bottom: .34em;
}

.wxParse-h4 {
  font-weight: 400;
  font-size: 14px;
  margin-bottom: .24em;
}

.wxParse-h5 {
  font-weight: 400;
  font-size: 13px;
  margin-bottom: .14em;
}

.wxParse-h6 {
  font-weight: 400;
  font-size: 12px;
  margin-bottom: .04em;
}

.wxParse-p {
  margin: 24rpx 0;
  font-size: 24rpx;
  line-height: 28rpx;
  color: rgba(0, 0, 0, 0.7);
  zoom: 1;
}

.wxParse-p:after {
  content: '';
  display: block;
  clear: both;
}

.wxParse-p .wxParse-inline {
  display: inline;
  line-height: inherit;
}

.wxParse-p .wxEmoji {
  width: 16px;
  height: 16px;
}

/* 自定义图片class */
.custom-img {
  margin: 10rpx auto;
  background-color: #f8f8f8;
}

.post-support-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.post-support {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  padding: 0 50rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  border: 1px solid #b3b3b3;
  border-radius: 30rpx;
  color: #b3b3bb;
}

.post-support--active {
  background-color: #019eed;
  color: #fff;
  border-color: #019eed;
}

.support-img {
  width: 34rpx;
  height: 34rpx;
  margin-right: 10rpx;
}

.comment-input-wrapper {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  width: 100%;
  padding: 0 30rpx 0 50rpx;
  height: 53px;
  border-top: 1px solid #eee;
  background-color: #fff;
}

.comment-input {
  flex: 1;
  height: 28px;
  margin-right: 30rpx;
  padding: 0 10px;
  border: 1px solid #ddd;
  border-radius: 8rpx;
}

.input-placeholder {
  color: #ccc;
}

.submit-btn {
  font-size: 36rpx;
  color: #029def;
}
