<!-- index.wxml -->
<view class="home">
  <!-- 顶部tag栏 -->
  <view class="header">
    <view class="header-taglist">
      <view 
        class="tag-item {{ item.text === '推荐' ? 'tag-item-recommend' : '' }}" 
        wx:for="{{ tagList }}"
        wx:key="{{ item.id }}"
        data-index="{{ index }}"
        bindtap="switchTag"
      >
        <image 
          class="recommend-icon" 
          wx:if="{{ item.text === '推荐'}}" 
          src="../../img/icon_main_boy.png">
        </image>
        <text class="{{ index === currentIndex ? 'tag-item-active' : '' }}">{{ item.text }}</text>
      </view>
    </view>
    <view class="bottom-line" style="{{ lineStyle }}"></view>
  </view>
  <!-- swiper内容栏 -->
  <swiper
    class="swiper-container"
    style="height: {{ swiperHeight }}px"
    duration="200"
    current="{{ currentIndex }}"
    bindchange="swiperChange"
  >
    <block wx:for="{{imgUrls}}" wx:key="{{ item }}">
      <swiper-item>
        <view class="scroll-view">
          <image 
            mode="widthFix"
            style="width: 100%; vertical-align: top"
            src="{{ item }}"
          >
          </image>
          <view style="height: 1000px; background: yellow"></view>
        </view>
      </swiper-item>
    </block>
  </swiper>
</view>