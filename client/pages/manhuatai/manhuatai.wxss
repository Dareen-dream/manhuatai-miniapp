.comic-search-wrapper {
  margin-bottom: 20rpx;
  padding: 14rpx 30rpx;
  background-color: #f5f5f5;
}

.comic-search {
  box-sizing: border-box;
  width: 100%;
  padding: 15rpx;
  border: 1px solid #dadada;
  border-radius: 30rpx;
  font-size: 28rpx;
  text-align: center;
  color: #dadada;
  background-color: #fff;
}

.title {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 30rpx;
  font-size: 32rpx;
  text-align: center;
  color: rgba(0, 0, 0, .9);
  background-color: #f5f5f5;
}

.title-left, .title-right {
  width: 35%;
  height: 4rpx;
  background: linear-gradient(to right, #f5f5f5, #77cbf5);
}

.title-right {
  background: linear-gradient(to left, #f5f5f5, #77cbf5);
}

.post-wrapper {
  background-color: #f5f5f5;
}

.post-item {
  padding: 0 30rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
}

.post-title {
  padding: 25rpx 0;
  line-height: 34rpx;

}

.title-label {
  float: left;
  width: 34rpx;
  height: 34rpx;
  margin-right: 6rpx;
  line-height: 34rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
  text-align: center;
  color: #fff;
}

.label-top {
  background-color: #fba100;
}

.label-elite {
  background-color: #089bed;
}

.title-text {
  line-height: 34rpx;
  font-size: 28rpx;
  color: rgba(0, 0, 0, .9);
}

.post-desc {
  height: 24rpx;
  margin-bottom: 38rpx;
  font-size: 24rpx;
  color: #b3b3b3;
  overflow: hidden;
}

.img-wrapper {
  position: relative;
  display: flex;
  margin-bottom: 30rpx;
  overflow: hidden;
}

.img-item {
  flex: 0 0 230rpx;
  height: 230rpx;
  margin-right: 16rpx;
}

.img-count {
  display: flex;
  align-items: center;
  position: absolute;
  top: 0;
  right: 0;
  padding: 15rpx 25rpx;
  border-top-left-radius: 25rpx;
  border-bottom-left-radius: 25rpx;
  font-size: 20rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.5);
}

.img-count image {
  width: 24rpx;
  height: 20rpx;
  margin-right: 15rpx;
}

.post-data {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 36rpx;
  font-size: 24rpx;
  color: #b3b3b3;
}

.data-left, .data-right {
  display: flex;
  align-items: center;
}

.post-create-time {
  margin-right: 10rpx;
}

.post-star-name {
  color: #1cb1f4;
}

.post-support {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
}

.support-img,
.reply-img {
  width: 32rpx;
  margin-right: 10rpx;
}

.post-reply {
  display: flex;
  align-items: center;
}

.load-more {
  padding: 30rpx;
  font-size: 28rpx;
  color: #b3b3b3;
  text-align: center;
}
